= form_tag add_book_to_bookcase_path, method: :post, remote: true do
  = hidden_field_tag :book_id, @book.id
  %table.table
    - @bookcases.each do |bookcase|
      %tr
        %td
          %i.icon-book= " #{bookcase.name}" 
        %td= check_box_tag("bookcase[]", bookcase.id, false)        
  = submit_tag "Add to Bookcases", :class => "btn btn-inverse"
